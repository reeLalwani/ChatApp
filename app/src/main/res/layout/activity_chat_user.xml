<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatUserActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView android:id="@+id/img_userdp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/dp"/>

    <TextView android:id="@+id/tv_user_displayname_fd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diaplay Name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <TextView android:id="@+id/tv_user_status_fd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <Button android:id="@+id/btn_friend_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Request"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"/>
</LinearLayout>